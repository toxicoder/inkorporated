# Cline MCP Configuration
# This is an example configuration file for MCP server settings
# Copy this file to cline_mcp_config.env and populate with your actual values

# CLINE Community MCP Server Configuration
CLINE_COMMUNITY_MCP_SERVER_DISABLED=${CLINE_COMMUNITY_MCP_SERVER_DISABLED:-"true"}

# Context7 Configuration
CONTEXT7_MCP_SERVER_DISABLED=${CONTEXT7_MCP_SERVER_DISABLED:-"true"}
CONTEXT7_MCP_CACHE_DIR=${MCP_CACHE_CACHE_DIR:-"/home/vscode/.cline/cache"}
CONTEXT7_MCP_MAX_TOKENS=${MCP_CACHE_MAX_TOKENS:-"25000"}
CONTEXT7_MCP_TTL=${MCP_CACHE_TTL:-"7200"}
CONTEXT7_MCP_ENABLE_INDEXING=${MCP_CACHE_ENABLE_INDEXING:-"true"}
CONTEXT7_MCP_COMPRESSION=${MCP_CACHE_COMPRESSION:-"true"}
CONTEXT7_MCP_API_KEY=${CONTEXT7_API_KEY:-"YOUR_CONTEXT7_API_KEY_HERE"}

# Docker MCP Server Configuration
DOCKER_MCP_MCP_SERVER_DISABLED=${DOCKER_MCP_MCP_SERVER_DISABLED:-"true"}

# Filesystem MCP Server Configuration
FILESYSTEM_MCP_SERVER_DISABLED=${FILESYSTEM_MCP_SERVER_DISABLED:-"true"}
FILESYSTEM_MCP_FS_BASE_DIRECTORY=${FS_BASE_DIRECTORY:-"./data_sandbox"}
FILESYSTEM_MCP_MCP_LOG_LEVEL=${MCP_LOG_LEVEL:-"debug"}
FILESYSTEM_MCP_MCP_TRANSPORT_TYPE=${MCP_TRANSPORT_TYPE:-"stdio"}

# Git Official MCP Server Configuration
GIT_OFFICIAL_MCP_SERVER_DISABLED=${GIT_OFFICIAL_MCP_SERVER_DISABLED:-"true"}

# Git Tools MCP Server Configuration
GIT_TOOLS_MCP_SERVER_DISABLED=${GIT_TOOLS_MCP_SERVER_DISABLED:-"true"}
GIT_BASE_DIR=${GIT_BASE_DIR:-"~/Developer/"}
LOGS_DIR=${LOGS_DIR:-"~/Developer/logs/git-mcp-server/"}
GIT_USERNAME=${GIT_USERNAME:-"your_username"}
GIT_EMAIL=${GIT_EMAIL:-"your_email@example.com"}
GIT_SIGN_COMMITS=${GIT_SIGN_COMMITS:-"false"}

# GitLab Configuration
GITLAB_MCP_SERVER_DISABLED=${GITLAB_MCP_SERVER_DISABLED:-"true"}
GITLAB_MCP_URL=${GITLAB_URL:-"https://gitlab.com"}
GITLAB_MCP_TOKEN=${GITLAB_TOKEN:-"YOUR_GITLAB_TOKEN_HERE"}
GITLAB_MCP_PROJECT_ID=${GITLAB_PROJECT_ID:-"YOUR_PROJECT_ID_HERE"}

# GitHub Configuration
GITHUB_MCP_SERVER_DISABLED=${GITHUB_MCP_SERVER_DISABLED:-"true"}
GH_TOKEN=${GH_TOKEN:-"YOUR_GITHUB_PAT_HERE"}
GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_PERSONAL_ACCESS_TOKEN:-"YOUR_GITHUB_PAT_HERE"}

# Google Drive Configuration
GDRIVE_MCP_SERVER_DISABLED=${GDRIVE_MCP_SERVER_DISABLED:-"true"}
GDRIVE_CREDENTIALS=${GDRIVE_CREDENTIALS:-"/path/to/gdrive-credentials.json"}
GDRIVE_ROOT_FOLDER_ID=${GDRIVE_ROOT_FOLDER_ID:-"YOUR_FOLDER_ID_HERE"}

# MongoDB Configuration
MONGODB_MCP_SERVER_DISABLED=${MONGODB_MCP_SERVER_DISABLED:-"true"}
MCP_MONGODB_URI=${MCP_MONGODB_URI:-"mongodb://YOUR_MONGO_URI_HERE"}
MCP_MONGODB_READONLY=${MCP_MONGODB_READONLY:-"true"}

# Ollama Configuration
OLLAMA_MCP_SERVER_DISABLED=${OLLAMA_MCP_SERVER_DISABLED:-"true"}
OLLAMA_MCP_API_BASE_URL=${OLLAMA_API_BASE_URL:-"http://localhost:11434"}
OLLAMA_MCP_MODEL=${OLLAMA_MODEL:-"llama3"}

# Open WebUI Configuration
OPEN_WEBUI_MCP_SERVER_DISABLED=${OPEN_WEBUI_MCP_SERVER_DISABLED:-"true"}
OPEN_WEBUI_MCP_API_BASE_URL=${OPEN_WEBUI_API_BASE_URL:-"http://localhost:3000"}
OPEN_WEBUI_MCP_API_KEY=${OPEN_WEBUI_API_KEY:-"YOUR_OPEN_WEBUI_API_KEY_HERE"}

# Perplexity Configuration
PERPLEXITY_MCP_SERVER_DISABLED=${PERPLEXITY_MCP_SERVER_DISABLED:-"true"}
PERPLEXITY_API_KEY=${PERPLEXITY_API_KEY:-"YOUR_PERPLEXITY_API_KEY_HERE"}

# PostgreSQL Configuration
POSTGRES_MCP_SERVER_DISABLED=${POSTGRES_MCP_SERVER_DISABLED:-"true"}
PG_HOST=${PG_HOST:-"localhost"}
PG_PORT=${PG_PORT:-"5432"}
PG_USER=${PG_USER:-"YOUR_PG_USER_HERE"}
PG_PASSWORD=${PG_PASSWORD:-"YOUR_PG_PASSWORD_HERE"}
PG_DATABASE=${PG_DATABASE:-"YOUR_DB_HERE"}

# Puppeteer MCP Server Configuration
PUPPETEER_MCP_SERVER_DISABLED=${PUPPETEER_MCP_SERVER_DISABLED:-"true"}

# Redis Configuration
REDIS_MCP_SERVER_DISABLED=${REDIS_MCP_SERVER_DISABLED:-"true"}
REDIS_HOST=${REDIS_HOST:-"localhost"}
REDIS_PORT=${REDIS_PORT:-"6379"}
REDIS_PWD=${REDIS_PWD:-"YOUR_REDIS_PASSWORD_HERE"}

# Sentry Configuration
SENTRY_MCP_SERVER_DISABLED=${SENTRY_MCP_SERVER_DISABLED:-"true"}
SENTRY_MCP_URL=${SENTRY_URL:-"https://sentry.io"}
SENTRY_MCP_AUTH_TOKEN=${SENTRY_AUTH_TOKEN:-"YOUR_SENTRY_TOKEN_HERE"}
SENTRY_MCP_PROJECT=${SENTRY_PROJECT:-"YOUR_PROJECT_SLUG_HERE"}

# Slack Configuration
SLACK_MCP_SERVER_DISABLED=${SLACK_MCP_SERVER_DISABLED:-"true"}
SLACK_MCP_XOXC_TOKEN=${SLACK_MCP_XOXC_TOKEN:-"YOUR_SLACK_TOKEN_HERE"}
SLACK_MCP_LOG_LEVEL=${SLACK_MCP_LOG_LEVEL:-"debug"}

# SQLite Configuration
SQLITE_MCP_SERVER_DISABLED=${SQLITE_MCP_SERVER_DISABLED:-"true"}
SQLITE_DB_PATH=${SQLITE_DB_PATH:-"/path/to/your/database.db"}

# Tavily Configuration
TAVILY_MCP_SERVER_DISABLED=${TAVILY_MCP_SERVER_DISABLED:-"true"}
TAVILY_API_KEY=${TAVILY_API_KEY:-"YOUR_TAVILY_API_KEY_HERE"}

# Vector Search Configuration
VECTOR_SEARCH_MCP_SERVER_DISABLED=${VECTOR_SEARCH_MCP_SERVER_DISABLED:-"true"}
VECTOR_SEARCH_MCP_EMBEDDING_MODEL=${VECTOR_SEARCH_EMBEDDING_MODEL:-"text-embedding-3-small"}
VECTOR_SEARCH_MCP_INDEX_PATH=${VECTOR_SEARCH_INDEX_PATH:-"/path/to/vector/index"}

# Note: This file contains all MCP configuration variables
# Devcontainer-specific configurations are in .devcontainer/devcontainer-config.env.example