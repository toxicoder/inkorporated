{
    "mcpServers": {
        "context7": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp@latest",
                "--api-key",
                "${CONTEXT7_MCP_API_KEY}"
            ],
            "env": {
                "CONTEXT7_CACHE_DIR": "/home/vscode/.cline/cache",
                "CONTEXT7_MAX_TOKENS": "25000",
                "CONTEXT7_TTL": "7200",
                "CONTEXT7_ENABLE_INDEXING": "true",
                "CONTEXT7_COMPRESSION": "true",
                "CONTEXT7_API_KEY": "${CONTEXT7_MCP_API_KEY}"
            }
        },
        "brave-search": {
            "command": "npx",
            "args": [
                "-y",
                "brave-search"
            ],
            "env": {
                "BRAVE_API_KEY": "${BRAVE_API_KEY}"
            }
        }
    }
}