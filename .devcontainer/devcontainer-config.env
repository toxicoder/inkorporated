# Devcontainer-specific configuration for MCP settings
# This file contains environment variables that control the devcontainer setup
# for mounting cline_mcp_settings.json to required paths

# Base path for the settings file (relative to devcontainer)
SETTINGS_FILE_PATH="/workspaces/inkorporated/.devcontainer/cline_mcp_settings.json"

# Target paths where the settings file should be symlinked
TARGET_PATH_1="/home/vscode/.config/Code/User/globalStorage/saoudrizwan.claude-dev/settings/cline_mcp_settings.json"
TARGET_PATH_2="/home/vscode/.cline/data/settings/cline_mcp_settings.json"

# Whether to create symlinks (set to false to disable)
# Note: Symlink creation is disabled as devcontainer mount is preferred
CREATE_SYMLINKS=true

# Environment variables for MCP servers (can be overridden)
GH_TOKEN=${GH_TOKEN:-"YOUR_GITHUB_PAT_HERE"}
GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_PERSONAL_ACCESS_TOKEN:-"YOUR_GITHUB_PAT_HERE"}
PERPLEXITY_API_KEY=${PERPLEXITY_API_KEY:-"YOUR_PERPLEXITY_API_KEY_HERE"}
TAVILY_API_KEY=${TAVILY_API_KEY:-"YOUR_TAVILY_API_KEY_HERE"}
MCP_MONGODB_URI=${MCP_MONGODB_URI:-"mongodb://YOUR_MONGO_URI_HERE"}
MCP_MONGODB_READONLY=${MCP_MONGODB_READONLY:-"true"}
REDIS_HOST=${REDIS_HOST:-"localhost"}
REDIS_PORT=${REDIS_PORT:-"6379"}
REDIS_PWD=${REDIS_PWD:-"YOUR_REDIS_PASSWORD_HERE"}
SLACK_MCP_XOXC_TOKEN=${SLACK_MCP_XOXC_TOKEN:-"YOUR_SLACK_TOKEN_HERE"}
PG_HOST=${PG_HOST:-"localhost"}
PG_PORT=${PG_PORT:-"5432"}
PG_USER=${PG_USER:-"YOUR_PG_USER_HERE"}
PG_PASSWORD=${PG_PASSWORD:-"YOUR_PG_PASSWORD_HERE"}
PG_DATABASE=${PG_DATABASE:-"YOUR_DB_HERE"}
SQLITE_DB_PATH=${SQLITE_DB_PATH:-"/path/to/your/database.db"}
GDRIVE_CREDENTIALS=${GDRIVE_CREDENTIALS:-"/path/to/gdrive-credentials.json"}
GDRIVE_ROOT_FOLDER_ID=${GDRIVE_ROOT_FOLDER_ID:-"YOUR_FOLDER_ID_HERE"}
GITLAB_URL=${GITLAB_URL:-"https://gitlab.com"}
GITLAB_TOKEN=${GITLAB_TOKEN:-"YOUR_GITLAB_TOKEN_HERE"}
GITLAB_PROJECT_ID=${GITLAB_PROJECT_ID:-"YOUR_PROJECT_ID_HERE"}
SENTRY_URL=${SENTRY_URL:-"https://sentry.io"}
SENTRY_AUTH_TOKEN=${SENTRY_AUTH_TOKEN:-"YOUR_SENTRY_TOKEN_HERE"}
SENTRY_PROJECT=${SENTRY_PROJECT:-"YOUR_PROJECT_SLUG_HERE"}
CONTEXT7_API_KEY=${CONTEXT7_API_KEY:-"YOUR_CONTEXT7_API_KEY_HERE"}
GIT_BASE_DIR=${GIT_BASE_DIR:-"~/Developer/"}
LOGS_DIR=${LOGS_DIR:-"~/Developer/logs/git-mcp-server/"}
GIT_USERNAME=${GIT_USERNAME:-"your_username"}
GIT_EMAIL=${GIT_EMAIL:-"your_email@example.com"}
GIT_SIGN_COMMITS=${GIT_SIGN_COMMITS:-"false"}
FS_BASE_DIRECTORY=${FS_BASE_DIRECTORY:-"./data_sandbox"}
MCP_LOG_LEVEL=${MCP_LOG_LEVEL:-"debug"}
MCP_TRANSPORT_TYPE=${MCP_TRANSPORT_TYPE:-"stdio"}

# Ollama Configuration
OLLAMA_API_BASE_URL=${OLLAMA_API_BASE_URL:-"http://localhost:11434"}
OLLAMA_MODEL=${OLLAMA_MODEL:-"llama3"}

# Open WebUI Configuration
OPEN_WEBUI_API_BASE_URL=${OPEN_WEBUI_API_BASE_URL:-"http://localhost:3000"}
OPEN_WEBUI_API_KEY=${OPEN_WEBUI_API_KEY:-"YOUR_OPEN_WEBUI_API_KEY_HERE"}

# Vector Search Configuration
VECTOR_SEARCH_EMBEDDING_MODEL=${VECTOR_SEARCH_EMBEDDING_MODEL:-"text-embedding-3-small"}
VECTOR_SEARCH_INDEX_PATH=${VECTOR_SEARCH_INDEX_PATH:-"/path/to/vector/index"}
