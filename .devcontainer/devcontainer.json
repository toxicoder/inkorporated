{
    "name": "Generalized Developer Container",
    "image": "mcr.microsoft.com/devcontainers/base:jammy",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        "ghcr.io/devcontainers/features/terraform:1": {
            "version": "latest",
            "tflint": "latest",
            "terragrunt": "latest"
        },
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
            "version": "latest",
            "helm": "latest",
            "minikube": "none"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "saoudrizwan.claude-dev",
                "bierner.markdown-mermaid",
                "dbaeumer.vscode-eslint",
                "ms-vscode.vscode-typescript-next",
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "ms-vscode.vscode-json",
                "ms-vscode.vscode-yaml",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-vscode.azure-repos",
                "ms-vscode-remote.remote-containers",
                "dsznajder.es7-react-js-snippets",
                "GitHub.remotehub",
                "GitHub.github-vscode-theme",
                "PKief.material-icon-theme",
                "monokai.theme-monokai-pro-vscode",
                "sdras.night-owl",
                "ms-vscode-remote.remote-ssh",
                "ms-vscode-remote.remote-ssh-edit",
                "ms-vscode.remote-server",
                "ms-vscode-remote.vscode-remote-extensionpack",
                "ms-vscode.remote-explorer",
                "ms-vscode.remote-repositories",
                "RobbOwen.synthwave-vscode",
                "4ops.terraform",
                "ms-dotnettools.vscode-dotnet-runtime",
                "ms-dotnettools.csharp",
                "ms-azuretools.vscode-containers",
                "Dart-Code.dart-code",
                "vscjava.vscode-java-debug",
                "vscjava.vscode-java-pack",
                "github.vscode-github-actions",
                "GitHub.vscode-pull-request-github",
                "golang.go",
                "vscjava.vscode-gradle",
                "hashicorp.terraform",
                "ecmel.vscode-html-css",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "redhat.java",
                "vscjava.vscode-maven",
                "ParallelsDesktop.parallels-desktop",
                "bmewburn.vscode-intelephense-client",
                "vscjava.vscode-java-dependency",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "ms-python.vscode-python-envs",
                "Shopify.ruby-lsp",
                "rust-lang.rust-analyzer",
                "vscjava.vscode-java-test",
                "vscodevim.vim",
                "Vue.volar",
                "redhat.vscode-yaml",
                "DavidAnson.vscode-markdownlint",
                "ms-edgedevtools.vscode-edge-devtools",
                "firefox-devtools.vscode-firefox-debug",
                "ms-windows-ai-studio.windows-ai-studio",
                "timonwong.shellcheck",
                "foxundermoon.shell-format"
            ]
        }
    },
    "postCreateCommand": "echo \"Running as $(whoami)\" && echo 'Running devcontainer setup...' && bash /workspaces/inkorporated/.devcontainer/setup-devcontainer-tools.sh && echo 'Devcontainer setup complete!' && sudo mkdir -p /home/vscode/.cline/data && sudo chown -R vscode:vscode /home/vscode/.cline/",
    "mounts": [
        {
            "type": "volume",
            "source": "mcp-cache-volume",
            "target": "/home/vscode/.cline/cache"
        },
        {
            "type": "bind",
            "source": "${localEnv:HOME}/Code/devcontainers/config/env",
            "target": "/home/vscode/.config/cline/mcp"
        }
    ],
    "remoteEnv": {
        "DOCKER_BUILDKIT": "1",
        "COMPOSE_DOCKER_CLI_BUILD": "1"
    },
    "overrideFeatureInstallOrder": [
        "ghcr.io/devcontainers/features/node",
        "ghcr.io/devcontainers/features/terraform",
        "ghcr.io/devcontainers/features/kubectl-helm-minikube"
    ],
    "runArgs": []
}