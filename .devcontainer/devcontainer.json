{
    "name": "Generalized Developer Container",
    "image": "mcr.microsoft.com/devcontainers/base:jammy",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        "ghcr.io/devcontainers/features/terraform:1": {
            "version": "latest",
            "tflint": "latest",
            "terragrunt": "latest"
        },
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
            "version": "latest",
            "helm": "latest",
            "minikube": "none"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "saoudrizwan.claude-dev",
                "bierner.markdown-mermaid",
                "dbaeumer.vscode-eslint",
                "ms-vscode.vscode-typescript-next",
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "ms-vscode.vscode-json",
                "ms-vscode.vscode-yaml",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers"
            ]
        }
    },
    "postCreateCommand": "echo \"Running as $(whoami)\" && echo 'Running devcontainer setup...' && bash /workspaces/inkorporated/.devcontainer/setup-devcontainer-tools.sh && cp -f /workspaces/inkorporated/.devcontainer/cline_mcp_settings.json /home/vscode/.vscode-server/data/User/globalStorage/saoudrizwan.claude-dev/settings/cline_mcp_settings.json && echo 'Devcontainer setup complete!'",
    "mounts": [],
    "remoteEnv": {
        "DOCKER_BUILDKIT": "1",
        "COMPOSE_DOCKER_CLI_BUILD": "1"
    },
    "overrideFeatureInstallOrder": [
        "ghcr.io/devcontainers/features/node",
        "ghcr.io/devcontainers/features/terraform",
        "ghcr.io/devcontainers/features/kubectl-helm-minikube"
    ],
    "runArgs": []
}