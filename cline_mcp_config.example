# Cline MCP Configuration
# This is an example configuration file for MCP server settings
# Copy this file to cline_mcp_config.env and populate with your actual values

# GitHub Configuration
GH_TOKEN=your_github_personal_access_token_here
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# Perplexity Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Tavily Configuration
TAVILY_API_KEY=your_tavily_api_key_here

# MongoDB Configuration
MCP_MONGODB_URI=mongodb://your_mongo_uri_here
MCP_MONGODB_READONLY=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PWD=your_redis_password_here

# Slack Configuration
SLACK_MCP_XOXC_TOKEN=your_slack_token_here

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=your_postgres_user_here
PG_PASSWORD=your_postgres_password_here
PG_DATABASE=your_database_name_here

# SQLite Configuration
SQLITE_DB_PATH=/path/to/your/database.db

# Google Drive Configuration
GDRIVE_CREDENTIALS=/path/to/gdrive-credentials.json
GDRIVE_ROOT_FOLDER_ID=your_folder_id_here

# GitLab Configuration
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_PROJECT_ID=your_project_id_here

# Sentry Configuration
SENTRY_URL=https://sentry.io
SENTRY_AUTH_TOKEN=your_sentry_token_here
SENTRY_PROJECT=your_project_slug_here

# Context7 Configuration
CONTEXT7_API_KEY=your_context7_api_key_here

# Git Configuration
GIT_BASE_DIR=~/Developer/
LOGS_DIR=~/Developer/logs/git-mcp-server/
GIT_USERNAME=your_username
GIT_EMAIL=your_email@example.com
GIT_SIGN_COMMITS=false

# Filesystem Configuration
FS_BASE_DIRECTORY=./data_sandbox
MCP_LOG_LEVEL=debug

# General Settings
MCP_TRANSPORT_TYPE=stdio
MCP_LOG_LEVEL=info
