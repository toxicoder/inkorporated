# Gitea Runner Configuration

[server]
# The address to listen on
http_address = "0.0.0.0"
http_port = 3000

# The URL of the Gitea instance
gitea_url = "http://gitea:3000"

# The runner name
name = "inkorporated-runner"

# The runner description
description = "Automated runner for inkorporated homelab"

# The runner tags
tags = "k3s,gitops,infrastructure"

[runner]
# The maximum number of jobs to run concurrently
max_concurrent_jobs = 1

# The timeout for jobs
job_timeout = 3600

# The cleanup strategy
cleanup_strategy = "always"

[logging]
# The log level
level = "info"

# The log format
format = "json"
