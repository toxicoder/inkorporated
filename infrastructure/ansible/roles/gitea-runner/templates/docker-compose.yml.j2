version: '3'

services:
  gitea-runner:
    image: gitea/runner:latest
    container_name: gitea-runner
    environment:
      - GITEA_RUNNER_NAME=inkorporated-runner
      - GITEA_RUNNER_DESCRIPTION=Automated runner for inkorporated homelab
      - GITEA_RUNNER_TAGS=k3s,gitops,infrastructure
      - GITEA_RUNNER_MAX_CONCURRENT_JOBS=1
      - GITEA_RUNNER_JOB_TIMEOUT=3600
      - GITEA_RUNNER_CLEANUP_STRATEGY=always
    restart: unless-stopped
    volumes:
      - ./config:/config
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - gitea-runner-network

networks:
  gitea-runner-network:
    driver: bridge
